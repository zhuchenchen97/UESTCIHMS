<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000" />

    <TextView
        android:id="@+id/NewsMainTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:text="     是否还有以下症状："
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/fuzhang"
            android:onClick="zz1"
            android:layout_marginLeft="40dp"
            android:text="口干"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/dabianganjie"
            android:onClick="zz2"
            android:layout_marginLeft="20dp"
            android:text="心悸"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/fuxie"
            android:onClick="zz3"
            android:layout_marginLeft="20dp"
            android:text="面色发黄"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/ganglie"
            android:onClick="zz4"
            android:layout_marginLeft="40dp"
            android:text="睡眠不佳"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/dabiandaixie"
            android:onClick="zz5"
            android:layout_marginLeft="20dp"
            android:text="肢体麻木"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/toubuhunzhang"
            android:onClick="zz6"
            android:layout_marginLeft="20dp"
            android:text="入睡困难"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/zhongshangfubushi"
            android:onClick="zz7"
            android:layout_marginLeft="40dp"
            android:text="胸闷"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/zhongfubushi"
            android:onClick="zz8"
            android:layout_marginLeft="20dp"
            android:text="情绪低落"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/xiafutong2"
            android:onClick="zz9"
            android:layout_marginLeft="20dp"
            android:text="眼睑浮肿"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
        android:id="@+id/shangfuyintong"
        android:onClick="zz10"
        android:layout_marginLeft="40dp"
        android:text="多饮"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#c7fcf3"
        android:textColor="#838c82"
        android:textSize="20dp"
        />



    </LinearLayout>

</LinearLayout>