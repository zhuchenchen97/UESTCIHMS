<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="输入您所在位置进行查询："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"/>
    <EditText
        android:id="@+id/mylocal"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:text="确认起终点名称BY高德"
        android:onClick="setUpGaodeAppByName"
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"/>
    <Button
        android:text="确定起终点名字BY百度"
        android:onClick="setUpBaiduAPPByName"
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"/>

    <View
        android:layout_height="20dp"
        android:layout_width="match_parent"/>

    <TextView
        android:text="直接开启定位查询："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:text="我的位置BY高德             "
        android:onClick="setUpGaodeAppByMine"
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp" />




    <Button
        android:text="我的位置BY百度              "
        android:onClick="setUpBaiduAPPByMine"
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"/>

</LinearLayout>
