<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000" />

    <TextView
        android:id="@+id/NewsMainTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:text="     是否还有以下症状："
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/fuzhang"
            android:onClick="zz1"
            android:layout_marginLeft="40dp"
            android:text="咽痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/dabianganjie"
            android:onClick="zz2"
            android:layout_marginLeft="20dp"
            android:text="流涕"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/fuxie"
            android:onClick="zz3"
            android:layout_marginLeft="20dp"
            android:text="咽异物感"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/ganglie"
            android:onClick="zz4"
            android:layout_marginLeft="40dp"
            android:text="咳黄色痰"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/dabiandaixie"
            android:onClick="zz5"
            android:layout_marginLeft="20dp"
            android:text="轻度呼吸急促"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/toubuhunzhang"
            android:onClick="zz6"
            android:layout_marginLeft="20dp"
            android:text="反复气促"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/zhongshangfubushi"
            android:onClick="zz7"
            android:layout_marginLeft="40dp"
            android:text="头脑不清晰"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/zhongfubushi"
            android:onClick="zz8"
            android:layout_marginLeft="20dp"
            android:text="中腹不适"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/xiafutong"
            android:onClick="zz9"
            android:layout_marginLeft="20dp"
            android:text="下腹痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/shangfuyintong"
            android:onClick="zz10"
            android:layout_marginLeft="40dp"
            android:text="上腹隐痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />


    </LinearLayout>

</LinearLayout>