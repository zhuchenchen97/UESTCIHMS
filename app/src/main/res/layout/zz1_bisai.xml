<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#000" />

    <TextView
        android:id="@+id/NewsMainTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:text="     是否还有以下症状："
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/yantong"
            android:onClick="zz1"
            android:layout_marginLeft="30dp"
            android:text="咽痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/liuti"
            android:onClick="zz2"
            android:layout_marginLeft="20dp"
            android:text="流涕"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/ketan"
            android:onClick="zz3"
            android:layout_marginLeft="20dp"
            android:text="咳痰"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/penti"
            android:onClick="zz4"
            android:layout_marginLeft="30dp"
            android:text="喷嚏"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/biyang"
            android:onClick="zz5"
            android:layout_marginLeft="20dp"
            android:text="鼻痒"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/yazhongtong"
            android:onClick="zz6"
            android:layout_marginLeft="20dp"
            android:text="牙肿痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/weihan"
            android:onClick="zz7"
            android:layout_marginLeft="30dp"
            android:text="畏寒"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/touzhang"
            android:onClick="zz8"
            android:layout_marginLeft="20dp"
            android:text="头胀"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/kesoushao"
            android:onClick="zz9"
            android:layout_marginLeft="20dp"
            android:text="咳嗽少"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/bitong"
            android:onClick="zz10"
            android:layout_marginLeft="30dp"
            android:text="鼻痛"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#c7fcf3"
            android:textColor="#838c82"
            android:textSize="20dp"
            />


    </LinearLayout>

</LinearLayout>